<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @search.destination %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Origin</dt>
              <dd><%= @search.origin %></dd>

              <dt>Destination</dt>
              <dd><%= @search.destination %></dd>

              <dt>Departure time</dt>
              <dd><%= @search.departure_time %></dd>

              <dt>Duration</dt>
              <dd><%= @search.duration %></dd>

              <dt>Carrier</dt>
              <dd><%= @search.carrier %></dd>

              <dt>Flight no</dt>
              <dd><%= @search.flight_no %></dd>

            </dl>
            <dl class="dl-horizontal">

              <dt>Origin return</dt>
              <dd><%= @search.origin_return %></dd>

              <dt>Destination return</dt>
              <dd><%= @search.destination_return %></dd>

              <dt>Departure return time</dt>
              <dd><%= @search.departure_return_time %></dd>

              <dt>Duration return</dt>
              <dd><%= @search.duration_return %></dd>

              <dt>Carrier return</dt>
              <dd><%= @search.carrier_return %></dd>

              <dt>Flight no return</dt>
              <dd><%= @search.flight_no_return %></dd>

            </dl>
            <dl class="dl-horizontal">
              <dt>Price</dt>
              <dd><%= @search.price %></dd>
            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/searches" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="<%= Carrier.find_by_code(@search.carrier_return).url %>" class="btn btn-success">
              <i class="fa fa-plane"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
