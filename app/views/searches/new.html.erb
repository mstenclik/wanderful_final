<!-- Validation failure messages -->

<% if @search.errors.any? %>
  <% @search.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Search</h3>
      </div>
      <div class="panel-body">
        <form action="/create_search" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for origin -->
          <div class="form-group">
            <label for="origin" class="col-sm-2 control-label">
              Origin
            </label>
            <div class="col-sm-10">
              <input type="text" id="origin" name="origin" placeholder="Origin" class="form-control" value="<%= @search.origin %>">
            </div>
          </div>

          <!-- Label and input for destination -->
          <div class="form-group">
            <label for="destination" class="col-sm-2 control-label">
              Destination
            </label>
            <div class="col-sm-10">
              <input type="text" id="destination" name="destination" placeholder="Destination" class="form-control" value="<%= @search.destination %>">
            </div>
          </div>

          <!-- Label and input for duration -->
          <div class="form-group">
            <label for="duration" class="col-sm-2 control-label">
              Duration
            </label>
            <div class="col-sm-10">
              <input type="text" id="duration" name="duration" placeholder="Duration" class="form-control" value="<%= @search.duration %>">
            </div>
          </div>

          <!-- Label and input for origin_return -->
          <div class="form-group">
            <label for="origin_return" class="col-sm-2 control-label">
              Origin return
            </label>
            <div class="col-sm-10">
              <input type="text" id="origin_return" name="origin_return" placeholder="Origin return" class="form-control" value="<%= @search.origin_return %>">
            </div>
          </div>

          <!-- Label and input for destination_return -->
          <div class="form-group">
            <label for="destination_return" class="col-sm-2 control-label">
              Destination return
            </label>
            <div class="col-sm-10">
              <input type="text" id="destination_return" name="destination_return" placeholder="Destination return" class="form-control" value="<%= @search.destination_return %>">
            </div>
          </div>

          <!-- Label and input for duration_return -->
