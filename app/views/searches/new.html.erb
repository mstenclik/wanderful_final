            <label for="duration_return" class="col-sm-2 control-label">
              Duration return
            </label>
            <div class="col-sm-10">
              <input type="text" id="duration_return" name="duration_return" placeholder="Duration return" class="form-control" value="<%= @search.duration_return %>">
            </div>
          </div>

