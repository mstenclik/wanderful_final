            <label for="flight_no_return" class="col-sm-2 control-label">
              Flight no return
            </label>
            <div class="col-sm-10">
              <input type="text" id="flight_no_return" name="flight_no_return" placeholder="Flight no return" class="form-control" value="<%= @search.flight_no_return %>">
            </div>
          </div>

          <!-- Label and input for departure_return_time -->
          <div class="form-group">
            <label for="departure_return_time" class="col-sm-2 control-label">
              Departure return time
            </label>
            <div class="col-sm-10">
              <input type="text" id="departure_return_time" name="departure_return_time" placeholder="Departure return time" class="form-control" value="<%= @search.departure_return_time %>">
