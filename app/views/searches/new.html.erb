          <div class="form-group">
            <label for="carrier" class="col-sm-2 control-label">
              Carrier
            </label>
            <div class="col-sm-10">
              <input type="text" id="carrier" name="carrier" placeholder="Carrier" class="form-control" value="<%= @search.carrier %>">
            </div>
          </div>

          <!-- Label and input for flight_no -->
          <div class="form-group">
            <label for="flight_no" class="col-sm-2 control-label">
              Flight no
            </label>
            <div class="col-sm-10">
              <input type="text" id="flight_no" name="flight_no" placeholder="Flight no" class="form-control" value="<%= @search.flight_no %>">
            </div>
          </div>

          <!-- Label and input for carrier_return -->
          <div class="form-group">
            <label for="carrier_return" class="col-sm-2 control-label">
